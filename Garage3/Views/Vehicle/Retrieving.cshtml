@model VehicleRetrieveViewModel

<h2>Retrieve Vehicle</h2>

<form asp-action="Retrieving" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="RegistrationNumber"></label>
        <input asp-for="RegistrationNumber" class="form-control" />
        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrintReceipt"></label>
        <input asp-for="PrintReceipt" type="checkbox" class="form-check-input" />
        <span asp-validation-for="PrintReceipt" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Retrieve Vehicle</button>
    <a asp-action="Overview" asp-controller="Vehicle" class="btn btn-secondary">Back to Overview</a>
</form>


