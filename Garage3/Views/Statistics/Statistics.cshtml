@model Garage3.ViewModels.StatisticsViewModel

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('myPieChart').getContext('2d');
            var myPieChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.VehiclesByType.Keys)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.VehiclesByType.Values)),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)',
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        });
    </script>
}

<h1>Garage Statistics</h1>

<div>
    <canvas id="myPieChart" width="400" height="400"></canvas>
</div>

<div>
    <p>Total Vehicles: @Model.TotalVehicles</p>
    <p>Total Wheels: @Model.TotalWheels</p>
    <p>Total Revenue: @Model.TotalRevenue</p>
</div>
